{
  "name": "word_unscrambler_be",
  "private": true,
  "version": "1.0.0",
  "description": "A word un-scrambler API written only with vanilla Node.js",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test:watch": "jest --watch",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "ignore": [
      "**/tests/**",
      "**/docs/**"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "keywords": [],
  "author": "Muhammad Sifat Hossain",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "husky": "^8.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
